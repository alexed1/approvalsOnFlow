    <isExposed>true</isExposed>
    <masterLabel>Express Choice</masterLabel>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="masterLabel" label="Master Label" type="String" required="true" default="Label"></property>
