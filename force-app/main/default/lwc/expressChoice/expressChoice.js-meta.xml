            <property name="required" label="Required" type="Boolean" default="false"></property>
            <property name="choiceValues" label="Choice Values" type="String"></property>
            <property name="value" label="Value" type="String"></property>
            <property name="displayMode" label="Display Mode" type="String" datasource="Radio,Picklist" default="Radio"></property>
            <property name="approvalProcessStepDefinitions" label="Approval Process Step Definitions" type="String"></property>
            <property name="approvalProcessDefinitions" label="Approval Process Definitions" type="String"></property>
            <property name="useWhichFieldForValue" label="Use Which Field for Value" type="String"></property>
            <property name="useWhichFieldForLabel" label="User Which Field for Label" type="String"></property>
            <property name="inputMode" label="Input Mode" type="String" datasource="Choice labels,Approval process step definitions,Approval process definitions"></property>
